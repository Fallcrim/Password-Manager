#pwd-dialog {
    padding: 0 1;
    width: 60;
    height: 15;
    border: thick $background 80%;
    background: $surface;
}

#pwd-dialog-label {
    column-span: 2;
    height: 1fr;
    width: 100%;
    content-align: center middle;
}

#pwd-dialog-input {
    height: 3;
    width: 100%;
    margin: 1 1 2 1;
}

#pwd-dialog-ok-btn {
    width: 100%;
}

PasswordDialog {
    align: center middle;
}